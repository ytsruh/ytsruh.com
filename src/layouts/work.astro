---
import MainLayout from "@layouts/main.astro";
const { content } = Astro.props;
---

<MainLayout title={`${content.title} | ${content.company}`} desc={content.desc}>
  <div class="container mt-20 lg:mt-36 mx-auto px-8 md:px-14 lg:px-24">
    <div class="flex flex-col lg:flex-row my-5">
      <div class="lg:basis-2/3 order-2 lg:order-1">
        <h1 class="primary-title">{content.title}</h1>
        <h2 class="text-theme text-3xl py-2">{content.company}</h2>
        <h3 class="text-xl py-2">Term: {content.time}</h3>
        <p class="text-lg text-secondary py-2">{content.desc}</p>
      </div>
      <div class="lg:basis-1/3 order-1 lg:order-2 p-5 lg:px-5 flex justify-center items-center">
        <img src={`../${content.logo}`} alt={content.company} class="w-full" />
      </div>
    </div>
    <div id="work-content"><slot /></div>
  </div>
</MainLayout>
